{
  "name": "elderjs-plugin-notion",
  "author": "Daniel Meechan",
  "version": "0.1.0",
  "description": "Easily use Notion as a CMS for your Elder.js powered website.",
  "license": "MIT",
  "main": "index.js",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "esbuild src/index.ts --platform=node --target=node10 --outfile=index.js --format=cjs --bundle --external:@notionhq/client",
    "build:tsdx": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "keywords": [
    "elder.js",
    "elderjs",
    "svelte",
    "ssg",
    "static",
    "site",
    "generator",
    "notion"
  ],
  "dependencies": {
    "@notionhq/client": "^0.1.3"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "esbuild": "^0.11.23",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
